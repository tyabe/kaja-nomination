  <div class='controls'>
    <%= f.text_field :twitter_id, :class => 'form-control input-xlarge input-with-feedback' %>
  </div>
</fieldset>

<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:nominees, :index), :class => 'btn btn-default' %>
</div>
