<% if @nominee.image_url.present? -%>
  <fieldset class='control-group'>
    <div class="row">
      <div class="col-md-2">
        <div class="thumbnail">
          <%= image_tag @nominee.image_url, alt: @nominee.name, title: @nominee.name, width: 80 %>
        </div>
      </div>
    </div>
  </fieldset>
<% end -%>
<% error = @nominee.errors.include?(:name) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :name, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :name, :class => 'form-control input-xlarge input-with-feedback' %>
  </div>
</fieldset>
<% error = @nominee.errors.include?(:image_url) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :image_url, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :image_url, :class => 'form-control input-xlarge input-with-feedback' %>
  </div>
</fieldset>
